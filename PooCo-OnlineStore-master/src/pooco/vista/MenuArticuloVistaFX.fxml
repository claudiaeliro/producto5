<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="idMenuArticulo" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pooco.controlador.ControladorArticulos">
    <children>
      <Pane prefHeight="450.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" layoutX="199.0" layoutY="14.0" prefHeight="70.0" prefWidth="203.0" text="Artículos" textAlignment="CENTER" textFill="#04611a" underline="true">
               <font>
                  <Font name="Arial" size="46.0" />
               </font>
            </Label>
            <Button fx:id="añadirArticulo" layoutX="130.0" layoutY="135.0" mnemonicParsing="false" onAction="#btnAddArticulo" prefHeight="32.0" prefWidth="340.0" text="Añadir Artículo" textFill="#04611a">
               <font>
                  <Font size="21.0" />
               </font>
            </Button>
            <Button fx:id="mostrarArticulo" layoutX="130.0" layoutY="213.0" mnemonicParsing="false" onAction="#btnMostrarArticulo" prefHeight="32.0" prefWidth="340.0" text="Mostrar Artículo" textFill="#04611a">
               <font>
                  <Font size="21.0" />
               </font>
            </Button>
            <Button fx:id="volverArticulo" layoutX="131.0" layoutY="370.0" mnemonicParsing="false" onAction="#btnSalir" prefHeight="32.0" prefWidth="340.0" text="Volver" textFill="#ec0a0a">
               <font>
                  <Font size="21.0" />
               </font>
            </Button>            
         </children>
      </Pane>
   </children>
</AnchorPane>
